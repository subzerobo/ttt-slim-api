{
    "name": "subzerobo/ttt-slim-api",
    "description": "Tic-Tac-Toe Game with Slim 3.0 Microframework",
    "keywords": ["microframework", "rest", "router", "psr7"],
    "homepage": "https://github.com/subzerobo/ttt-slim-api",
    "license": "MIT",
    "authors": [
        {
            "name": "Ali Kaviani Hamedani",
            "email": "ali.kaviani@gmail.com",
            "homepage": "https://github.com/subzerobo"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "slim/twig-view": "^2.4"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "app/",
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:2000 -t public",
        "test": "phpunit"
    }

}
